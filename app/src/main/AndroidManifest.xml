<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ttyun.recyclerviewwiki"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- RecyclerView嵌套RecyclerView -->
        <activity android:name=".nest.ui.NestActivity"/>

        <!-- 仿探探的翻牌效果 -->
        <activity android:name=".tantan.ui.TanTanActivity"/>

        <!-- 仿人人影视的翻牌效果 -->
        <activity android:name=".renren.ui.RenRenActivity"/>

        <!-- 使用ItemDecoration实现顶部的悬浮功能 -->
        <activity android:name=".sticky.ui.StickyActivity"/>

        <!-- 使用DiffUtil和Adapter中的重载方法完成定向更新 -->
        <activity android:name=".payloads.ui.PayloadsActivity"/>

        <!-- 蜂巢效果的Activity -->
        <activity android:name=".hive.ui.HiveActivity"/>

        <!-- 测试一些效果用的demoActivity -->
        <activity android:name=".main.ui.DemoActivity"/>
    </application>

</manifest>