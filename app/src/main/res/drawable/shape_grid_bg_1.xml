<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item android:left="@dimen/shadow_size" android:top="@dimen/shadow_size">
                <shape>
                    <solid android:color="@color/grid_item_normal"/>
                    <corners android:radius="@dimen/shadow_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="@dimen/shadow_size" android:top="@dimen/shadow_size">
                <shape>
                    <solid android:color="#dedede"/>
                    <corners android:radius="@dimen/shadow_radius"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item android:bottom="@dimen/shadow_size" android:right="@dimen/shadow_size">
                <shape>
                    <solid android:color="@color/grid_item_normal"/>
                    <corners android:radius="@dimen/shadow_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>